{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "resolveJsonModule": true,
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "allowJs": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./",
    "jsx": "react",             
  },
  "include": ["**/*.ts", "server/types/**/*.d.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "transpileOnly": true,
    "swc": true
  }
}
