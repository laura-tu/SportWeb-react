{
  "compilerOptions": {
    "module": "NodeNext",               // Set to NodeNext for ES module support
    "moduleResolution": "NodeNext",     // Set to NodeNext for module resolution
    "target": "ES2020",                    // ES6 or later for modern JS features
    "esModuleInterop": true,            // Interop for CommonJS and ES Modules
    "skipLibCheck": true,
    "outDir": "./dist",                 // Output directory for compiled files
    "rootDir": ".",                     // Root directory of your source files
    "strict": true,                     // Enables all strict type checking options
    "paths": {
      "*": ["./node_modules/*", "./*"]      
    }
  },
  "include": ["**/*.ts", "./types/**/*.d.ts"],
  "exclude": ["node_modules"]     // Exclude node_modules from compilation
}
